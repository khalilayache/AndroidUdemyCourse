<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5E9B9"
    tools:context="com.khalilayache.animalssound.MainActivity">

  <ImageView
      android:id="@+id/logo"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginLeft="8dp"
      android:layout_marginRight="8dp"
      android:layout_marginTop="16dp"
      android:src="@drawable/logo"
      app:srcCompat="@drawable/logo"
      app:layout_constraintRight_toRightOf="parent"
      app:layout_constraintLeft_toLeftOf="parent"
      app:layout_constraintHorizontal_bias="0.504"
      app:layout_constraintTop_toTopOf="parent"/>

  <ImageView
      android:id="@+id/dog"
      android:tag="@raw/dog"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginLeft="61dp"
      android:layout_marginTop="16dp"
      android:src="@drawable/dog"
      app:srcCompat="@drawable/dog"
      app:layout_constraintTop_toBottomOf="@+id/logo"
      app:layout_constraintLeft_toLeftOf="parent"/>

  <ImageView
      android:id="@+id/cat"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginLeft="42dp"
      android:layout_marginRight="8dp"
      android:layout_marginTop="16dp"
      android:src="@drawable/cat"
      app:srcCompat="@drawable/cat"
      app:layout_constraintLeft_toRightOf="@+id/dog"
      app:layout_constraintRight_toRightOf="parent"
      app:layout_constraintHorizontal_bias="0.0"
      app:layout_constraintTop_toBottomOf="@+id/logo"/>

  <ImageView
      android:id="@+id/lion"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginLeft="61dp"
      android:layout_marginTop="16dp"
      android:src="@drawable/lion"
      app:layout_constraintTop_toBottomOf="@+id/dog"
      app:layout_constraintLeft_toLeftOf="parent"/>

  <ImageView
      android:id="@+id/monkey"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginLeft="47dp"
      android:layout_marginTop="17dp"
      android:src="@drawable/monkey"
      app:layout_constraintTop_toBottomOf="@+id/cat"
      app:layout_constraintLeft_toRightOf="@+id/lion"
      app:layout_constraintRight_toRightOf="parent"
      app:layout_constraintHorizontal_bias="0.0"/>

  <ImageView
      android:id="@+id/sheep"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginLeft="61dp"
      android:layout_marginTop="32dp"
      android:src="@drawable/sheep"
      app:layout_constraintLeft_toLeftOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/lion"/>

  <ImageView
      android:id="@+id/cow"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginLeft="8dp"
      android:layout_marginRight="8dp"
      android:src="@drawable/cow"
      app:layout_constraintRight_toRightOf="parent"
      app:layout_constraintLeft_toRightOf="@+id/sheep"
      app:layout_constraintHorizontal_bias="0.358"
      app:layout_constraintTop_toBottomOf="@+id/monkey"/>

  <ImageView
      android:id="@+id/copyright"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginBottom="8dp"
      android:layout_marginLeft="8dp"
      android:layout_marginRight="8dp"
      android:src="@drawable/copyright"
      app:layout_constraintRight_toRightOf="parent"
      app:layout_constraintLeft_toLeftOf="parent"
      app:layout_constraintBottom_toBottomOf="parent"/>

</android.support.constraint.ConstraintLayout>
